<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoShfrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">



            <TextView
                android:id="@+id/txtnew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="new"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtupcoming"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="upcoming"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtbest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="popular"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtfavourite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TOP"
                android:textColor="#000"

                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Recmovie"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="16">

        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="14">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Arabic Movies"
                    android:textColor="#777"
                    android:textStyle="bold"
                    android:id="@+id/txtarabic"/>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/home"
                    android:id="@+id/ichome"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="2"
                    android:src="@drawable/glasses"
                    android:id="@+id/icfav"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:src="@drawable/up"
                    android:id="@+id/itrend"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="English Movies"
                    android:textColor="#777"
                    android:textStyle="bold"
                    android:id="@+id/txten"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</FrameLayout>